<UserControl x:Class="BrainRAM.Scratchpad"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="130" d:DesignWidth="480">
    
    <Grid x:Name="ScratchpadGrid">
        <TextBlock HorizontalAlignment="Left" Margin="12,0,0,95" Grid.Row="1" TextWrapping="Wrap" Text="Scratchpad" VerticalAlignment="Bottom" />
        <TextBox Height="100" Margin="0,0,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Bottom" Text="{Binding Data, Mode=TwoWay}" Tap="TextBox_Tap" />
    </Grid>
</UserControl>